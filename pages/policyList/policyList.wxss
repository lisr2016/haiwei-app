.policy-list {
  background: #EFEFEF;
  min-height: 100vh;
  box-sizing: border-box;
}
.policy-list .content {
  width: 100%;
  background: #FFFFFF;
  padding: 0 12px;
  box-sizing: border-box;
}
.policy-list .content .item {
  height: 60px;
}
.policy-list .content .item .title {
  font-size: 16px;
  color: #333333;
  line-height: 30px;
}
.policy-list .content .item .time {
  font-size: 12px;
  color: #999999;
  line-height: 30px;
  display: flex;
  justify-content: space-between;
}
.policy-list .content .item .time .time-content {
  width: 70%;
}
